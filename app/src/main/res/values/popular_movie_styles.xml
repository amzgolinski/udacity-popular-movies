<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="GridLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:numColumns">auto_fit</item>
    <item name="android:verticalSpacing">5dp</item>
    <item name="android:horizontalSpacing">5dp</item>
    <item name="android:stretchMode">columnWidth</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="MovieDetail">
    <item name="android:gravity">center</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MovieTitle" parent="MovieDetail">
    <item name="android:textSize">30sp</item>
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>
    <item name="android:capitalize">characters</item>
  </style>

  <style name="MovieReleaseDate" parent="MovieDetail">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#9AAEB5</item>
  </style>

  <style name="MovieUserRating" parent="MovieDetail">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingRight">5dp</item>
    <item name="android:textColor">#9AAEB5</item>
  </style>

  <style name="MoviePoster">
    <item name="android:layout_width">@dimen/poster_width</item>
    <item name="android:layout_height">@dimen/poster_height</item>
  </style>

  <style name="MovieUserRatingLayout">
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="MovieOverview" parent="MovieDetail">
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">fill_horizontal</item>
  </style>
</resources>
